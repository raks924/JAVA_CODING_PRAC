//wap for linear search in array//

#include <stdio.h>

int main()
{
    int n,j,k;
    
    printf("enter the size of array ");
    scanf("%d",&n);
    int arr[n];
    
    printf("enter the %d elements", n);
    for(j=0;j<n;j++)
    {   
        scanf("%d",&arr[j]);
    }
    
    printf("the array elements are ");
    for(j=0;j<n;j++)
    {
        printf("%d \n", arr[j]);
    }
    
    printf("\n enter the value to be searched \n");
    scanf("%d",&k);
    
    if(arr[n]=k)
    printf("value found!");
    else
    return -1;
    
    return 0;
}
